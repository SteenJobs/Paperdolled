<ul id="questions">
    <!-- Generated by jQuery -->
		<%= form_for [@answer] do |f| %>
    <li>
        <p>Dress me for:</p>
					<%= f.collection_select(:answer, :event_id, Event.all, :id, :dress_me_for, prompt: true) %>
    </li>
		<li>
			<p>And:</p>
			<%= f.collection_select(:options, :id, Options.all.where(event_id: :event_id), :options_id, :possible_response, prompt: true)
				%>
		</li>
		<li>
			<p>Also:</p>
		</li>
		<li>
			<p>With:</p>
		</li>
		<li>
			<p>Date:</p>
		</li>
		<li>
			<p>Anything else?</p>
		</li>
    <% end %>
</ul>

