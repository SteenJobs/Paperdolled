
<!-- header -->
<% provide(:title, "Users") %>



<!-- content -->

	<div class="container-fluid">
	<%= render "layouts/main_navbar" %>
	</div>

			<div class="container">
			        <!-- These are our grid blocks --> 
				<% @users.in_groups_of(3,false).each do |group| %>
						<div class="row">
						
								<% group.each do |user| %>
									<div class="col-md-4">
										
									
									
												<h5><%= user.first_name + " " + user.last_name %></h5>
												<hr style="border-color: black;">
												<p class="adm">Last updated on <%= user.updated_at.localtime.strftime('%A, %B %d') %></p>
												<!-- <%= link_to image_tag(user.picture), user_path(user), class: "img-responsive" %> -->
													<%= link_to image_tag("http://placehold.it/300x300"), user_path(user), class: "img-responsive" %>
																
													<% User.list_answers(user).each do |scenario| %>
															<% scenario.each do |answer| %>																
																<%= answer %><br>																	
															<% end %>																				
													<% end %>
												
												
												<%= link_to "View Profile", user_path(user), class: "link" %>
												&nbsp;&nbsp;
												<%= link_to "Style Me!", new_outfit_path, class: "link" %>
							
											
											</div>
								<% end %>
					
						</div>
				<% end %>


			<br>
			<br>
				
			<div class="row">
				<div class="col-md-12 text-center">
				  <div id="loadMore">Load more</div>
					<div id="showLess">Show less</div>
				</div>
			</div>
		
	</div>

					