<ul id="questions">
    <!-- Generated by jQuery -->
		<%= form_for [@answer],  html: {class: "form-inline well"} do |f| %>
    <li>
      <p>Dress me for:</p>
			<%= select_tag :event_id, options_for_select(Event.all.map{ |option| [option.dress_me_for, option.id, { 'data-event-id' => "" }] }), {prompt: "Please select"} %>
    </li>
		<li>
			<p>And:</p>
			<%= select_tag :option_id2, options_for_select(Option.all.where(question_type: "And:").map{ |option| [option.possible_response, option.id, { 'data-event-id' => option.event_id }] }), {prompt: "Please select"} %>
		</li>
		<li>
			<p>Also:</p>
			<%= select_tag :option_id3, options_for_select(Option.all.where(question_type: "Also:").map{ |option| [option.possible_response, option.id, { 'data-event-id' => option.event_id }] }), {prompt: "Please select"}  %>
		</li>
		<li>
			<p>With:</p>
			<%= select_tag :option_id4, options_for_select(Option.all.where(question_type: "With:").map{ |option| [option.possible_response, option.id, { 'data-event-id' => option.event_id }] }), {prompt: "Please select"} %>
		</li>
		<li>
			<p>Date:</p>
			<%= select_tag :option_id5, options_for_select(Option.all.where(question_type: "Date:").map{ |option| [option.possible_response, option.id, { 'data-event-id' => option.event_id }] }), {prompt: "Please select"} %>
		</li>
		<li>
			<p>Anything else?</p>
			<%= text_field :answer, :type_in, placeholder: "Type in..." %>
		</li>
		
		<li>
	  <div class="actions">
	    <%= f.submit "Submit" %>
	  </div>
	  </li>
    <% end %>
</ul>
